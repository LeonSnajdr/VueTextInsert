root = true

[*]
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8-bom

[*.js]
indent_size = 2

[*.scss]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2

[*.json]
indent_size = 2

[*.xml]
indent_size = 2

[*.csproj]
indent_size = 2

[*.sln]
indent_style = tab
indent_size = 2

[*.ruleset]
indent_size = 2
insert_final_newline = unset

[*.DotSettings]
indent_style = tab
insert_final_newline = unset

[.gitbugtraq]
indent_size = 1
insert_final_newline = unset

[*.config]
indent_size = 2
